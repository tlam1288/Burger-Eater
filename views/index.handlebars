<h1>Eat a Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col-sm">


            <h2>New Burgers!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h2>Devoured burgers!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container create-burger">
    <h2>Make a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca" class="label">Burger:</label>
            <input type="text" id="ca" name="name">
        </div>

        <button type="submit" class="btn btn-primary">Add Burger</button>
    </form>
</div>